def fmt_pct(x):
    return f"{x*100:.2f}%" if pd.notnull(x) else "‚Äî"
def fmt_num(x):
    try:
        x = float(x)
        for unit in ["","K","M","B","T"]:
            if abs(x) < 1000.0:
                return f"{x:,.2f}{unit}"
            x /= 1000.0
    except Exception:
        pass
    return "‚Äî"
table_data = {
    "Metric": [
        "Price (last)","Market Cap","P/E (TTM)","Forward P/E","P/B","PEG","Dividend Yield",
        "Profit Margin","ROE","Current Ratio","Quick Ratio","Debt/Equity","Beta","Trailing EPS","Forward EPS"
    ],
    "Value": [
        fmt_num(info.get("last_price")),
        fmt_num(info.get("marketCap")),
        info.get("trailingPE","‚Äî"),
        info.get("forwardPE","‚Äî"),
        info.get("priceToBook","‚Äî"),
        info.get("pegRatio","‚Äî"),
        f"{_safe_float(info.get('dividendYield', np.nan))*100:.2f}%" if info.get("dividendYield") not in [None, np.nan] else "‚Äî",
        fmt_pct(info.get("profitMargins")) if info.get("profitMargins") else "‚Äî",
        fmt_pct(info.get("returnOnEquity")) if info.get("returnOnEquity") else "‚Äî",
