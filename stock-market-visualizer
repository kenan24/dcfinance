        st.plotly_chart(fig_corr, use_container_width=True)
        st.download_button("üì∏ PNG (Correlation)", data=fig_to_png_bytes(fig_corr), file_name="correlation.png", mime="image/png")
        st.download_button("üß© HTML (Correlation)", data=fig_to_html_bytes(fig_corr), file_name="correlation.html", mime="text/html")

